{
  "name": "backend",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "start": "node dist/index.js",
    "dev": "tsup --watch --onSuccess \"node dist/index.js\"",
    "build": "tsup",
    "clean": "rm -rf dist",
    "typecheck": "tsc -b",
    "lint": "eslint src/",
    "test": "jest --detectOpenHandles",
    "db:generate": "cd ./src; drizzle-kit generate",
    "db:migrate": "tsup ./src/drizzle/migrate.ts --onSuccess 'node dist/migrate.js'"
  },
  "jest": {
    "preset": "@repo/jest-presets/node"
  },
  "dependencies": {
    "@repo/logger": "workspace:*",
    "@trpc/server": "11.0.0-rc.394",
    "body-parser": "^1.20.2",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "drizzle-orm": "^0.31.2",
    "express": "^4.18.3",
    "morgan": "^1.10.0",
    "postgres": "^3.4.4"
  },
  "devDependencies": {
    "@repo/eslint-config": "workspace:*",
    "@repo/jest-presets": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "@types/body-parser": "^1.19.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.11.24",
    "@types/supertest": "^6.0.2",
    "drizzle-kit": "^0.22.5",
    "jest": "^29.7.0",
    "pre-commit": "^1.2.2",
    "rimraf": "^5.0.7",
    "supertest": "^6.3.4",
    "tsup": "^8.0.2",
    "typescript": "4.9.5"
  }
}
